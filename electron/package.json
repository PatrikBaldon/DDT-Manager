{
  "name": "ddt-manager-electron",
  "version": "1.1.0",
  "description": "Applicazione Electron per la gestione DDT",
  "main": "launcher.js",
  "scripts": {
    "start": "electron launcher.js",
    "dev": "NODE_ENV=development electron launcher.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "install": "node installer.js",
    "uninstall": "node installer.js --uninstall",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "electron",
    "ddt",
    "agricoltura",
    "gestione",
    "documenti",
    "trasporto"
  ],
  "author": "Azienda Agricola BB&F",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.0.0",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "node-cron": "^3.0.3",
    "date-fns": "^2.30.0"
  },
  "build": {
    "appId": "com.aziendaagricola.ddt",
    "productName": "DDT Manager",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "static/**/*",
      "templates/**/*",
      "ddt_app/**/*",
      "ddt_project/**/*",
      "manage.py",
      "requirements.txt",
      "db.sqlite3",
      "package.json",
      "!**/__pycache__/**/*",
      "!**/migrations/**/*",
      "!**/tests/**/*",
      "!**/logs/**/*",
      "!**/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "static",
        "to": "static"
      },
      {
        "from": "templates",
        "to": "templates"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "static/images/icons/icon-512x512.ico",
      "publisherName": "Azienda Agricola BB&F",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "static/images/icons/icon-512x512.icns",
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "static/images/icons/icon-512x512.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DDT Manager",
      "installerIcon": "static/images/icons/icon-512x512.ico",
      "uninstallerIcon": "static/images/icons/icon-512x512.ico",
      "uninstallDisplayName": "DDT Manager Uninstaller",
      "license": "LICENSE",
      "runAfterFinish": true,
      "allowElevation": true
    },
    "dmg": {
      "title": "DDT Manager",
      "background": "static/images/logo1.png",
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
